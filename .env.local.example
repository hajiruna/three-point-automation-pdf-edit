# Microsoft Entra ID (Azure AD) 認証設定
# 情報システム部から取得した値を設定してください

# アプリケーション（クライアント）ID
AZURE_AD_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# クライアントシークレット
AZURE_AD_CLIENT_SECRET=your-client-secret-value

# ディレクトリ（テナント）ID
AZURE_AD_TENANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# NextAuth.js 設定
# ランダムな文字列を生成: openssl rand -base64 32
NEXTAUTH_SECRET=your-random-secret-string

# 本番環境のURL（Vercelデプロイ後に設定）
NEXTAUTH_URL=https://your-project.vercel.app

# Supabase（既存設定）
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# ===========================================
# Stripe 課金システム設定
# ===========================================

# 課金機能の有効化フラグ（true で有効、それ以外で無効）
NEXT_PUBLIC_ENABLE_BILLING=false

# Stripe API Keys（Stripeダッシュボードから取得）
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Stripe Webhook Secret（Stripeダッシュボード > Webhooks から取得）
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs（Stripeダッシュボードで商品・価格作成後に設定）
# Pro プラン
STRIPE_PRICE_PRO_MONTHLY_JPY=price_...
STRIPE_PRICE_PRO_MONTHLY_USD=price_...
STRIPE_PRICE_PRO_YEARLY_JPY=price_...
STRIPE_PRICE_PRO_YEARLY_USD=price_...

# Enterprise プラン
STRIPE_PRICE_ENTERPRISE_MONTHLY_JPY=price_...
STRIPE_PRICE_ENTERPRISE_MONTHLY_USD=price_...
STRIPE_PRICE_ENTERPRISE_YEARLY_JPY=price_...
STRIPE_PRICE_ENTERPRISE_YEARLY_USD=price_...

# 利用量課金（メータード）
STRIPE_PRICE_USAGE_PER_PAGE_JPY=price_...
STRIPE_PRICE_USAGE_PER_PAGE_USD=price_...
